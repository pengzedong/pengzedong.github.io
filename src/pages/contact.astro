---
import Layout from '../layouts/Layout.astro';
import profileData from '../data/profile.json';
---

<Layout title="Contact - Dr. Zedong Peng">
  <section class="container mx-auto px-6 py-16">
    <h1 class="section-title">Contact</h1>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Contact Information -->
      <div>
        <div class="card p-8 mb-8">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6">Get in Touch</h2>
          
          <div class="space-y-6">
            <div class="flex items-start">
              <svg class="w-6 h-6 text-montana-600 dark:text-montana-400 mt-1 mr-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <div>
                <h3 class="font-semibold text-gray-900 dark:text-gray-100 mb-1">Email</h3>
                <a href={`mailto:${profileData.email}`} class="text-montana-600 dark:text-montana-400 hover:underline">
                  {profileData.email}
                </a>
              </div>
            </div>

            <div class="flex items-start">
              <svg class="w-6 h-6 text-montana-600 dark:text-montana-400 mt-1 mr-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              <div>
                <h3 class="font-semibold text-gray-900 dark:text-gray-100 mb-1">Phone</h3>
                <p class="text-gray-700 dark:text-gray-300">{profileData.phone}</p>
              </div>
            </div>

            <div class="flex items-start">
              <svg class="w-6 h-6 text-montana-600 dark:text-montana-400 mt-1 mr-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <div>
                <h3 class="font-semibold text-gray-900 dark:text-gray-100 mb-1">Office Location</h3>
                <p class="text-gray-700 dark:text-gray-300">
                  {profileData.department}<br/>
                  {profileData.institution}<br/>
                  {profileData.location}
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Office Hours -->
        <div class="card p-8">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-4">Office Hours</h2>
          <p class="text-gray-700 dark:text-gray-300 mb-4">
            Please email me to schedule an appointment. I'm happy to meet with students, prospective collaborators, and anyone interested in discussing research opportunities.
          </p>
          <a href={`mailto:${profileData.email}?subject=Meeting Request`} class="btn-primary inline-block">
            Schedule a Meeting
          </a>
        </div>
      </div>

      <!-- Research Opportunities -->
      <div>
        <div class="card p-8 mb-8">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-4">Research Opportunities</h2>
          <p class="text-gray-700 dark:text-gray-300 mb-4">
            I'm always interested in working with motivated students on research projects in software engineering. If you're interested in:
          </p>
          <ul class="list-disc list-inside space-y-2 text-gray-700 dark:text-gray-300 mb-6">
            <li>Requirements engineering and traceability</li>
            <li>Automated software testing</li>
            <li>AI for software engineering</li>
            <li>Software vulnerability detection</li>
            <li>Scientific software quality</li>
          </ul>
          <p class="text-gray-700 dark:text-gray-300">
            Please reach out via email with your CV and a brief description of your interests.
          </p>
        </div>

        <div class="card p-8 bg-gradient-to-br from-montana-50 to-forest-50 dark:from-gray-800 dark:to-gray-700">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-4">Collaboration</h2>
          <p class="text-gray-700 dark:text-gray-300 mb-4">
            I welcome collaboration opportunities with:
          </p>
          <ul class="list-disc list-inside space-y-2 text-gray-700 dark:text-gray-300">
            <li>Academic researchers in software engineering</li>
            <li>Industry partners interested in research collaboration</li>
            <li>Open-source communities working on software quality</li>
            <li>Educators developing software engineering curricula</li>
          </ul>
        </div>

        <!-- Social Links -->
        <div class="mt-8">
          <h2 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-4">Connect Online</h2>
          <div class="flex space-x-4">
            <a href={profileData.links.googleScholar} target="_blank" rel="noopener noreferrer" class="flex items-center justify-center w-12 h-12 bg-gray-200 dark:bg-gray-700 rounded-lg hover:bg-montana-500 hover:text-white dark:hover:bg-montana-600 transition-colors">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 24a7 7 0 110-14 7 7 0 010 14zm0-24L0 9.5l4.838 3.94A8 8 0 0112 9a8 8 0 017.162 4.44L24 9.5z"/>
              </svg>
            </a>
            <a href={profileData.links.github} target="_blank" rel="noopener noreferrer" class="flex items-center justify-center w-12 h-12 bg-gray-200 dark:bg-gray-700 rounded-lg hover:bg-montana-500 hover:text-white dark:hover:bg-montana-600 transition-colors">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
              </svg>
            </a>
            <a href={profileData.links.linkedin} target="_blank" rel="noopener noreferrer" class="flex items-center justify-center w-12 h-12 bg-gray-200 dark:bg-gray-700 rounded-lg hover:bg-montana-500 hover:text-white dark:hover:bg-montana-600 transition-colors">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
