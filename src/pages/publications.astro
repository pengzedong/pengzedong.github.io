---
import Layout from '../layouts/Layout.astro';
import PublicationCard from '../components/PublicationCard.astro';
import PublicationFilter from '../components/PublicationFilter.astro';
import publicationsData from '../data/publications.json';
---

<Layout title="Publications - Dr. Zedong Peng">
  <section class="container mx-auto px-6 py-16">
    <h1 class="section-title">Publications</h1>
    
    <div class="prose-custom max-w-4xl mb-12">
      <p class="text-lg leading-relaxed">
        My research has been published in premier software engineering conferences and journals, including IEEE RE, ICSE, ESEM, and Requirements Engineering journal. I have received multiple best paper awards and serve as a reviewer for top-tier venues in software engineering.
      </p>
    </div>

    <PublicationFilter />

    <!-- Conference Papers -->
    <div class="mb-16">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6 flex items-center">
        <svg class="w-6 h-6 mr-2 text-montana-600 dark:text-montana-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
        Conference & Workshop Papers
      </h2>
      <div>
        {publicationsData.conferences.map(pub => (
          <PublicationCard publication={pub} type="conference" />
        ))}
      </div>
    </div>

    <!-- Journal Papers -->
    <div>
      <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6 flex items-center">
        <svg class="w-6 h-6 mr-2 text-forest-600 dark:text-forest-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
        </svg>
        Journal Papers
      </h2>
      <div>
        {publicationsData.journals.map(pub => (
          <PublicationCard publication={pub} type="journal" />
        ))}
      </div>
    </div>
  </section>
</Layout>
