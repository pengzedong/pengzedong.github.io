---
import profileData from '../data/profile.json';
---

<footer class="bg-gray-50 dark:bg-gray-900 border-t border-gray-200 dark:border-gray-800 mt-20">
  <div class="container mx-auto px-6 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Contact Info -->
      <div>
        <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100 mb-4">Contact</h3>
        <div class="space-y-2 text-gray-700 dark:text-gray-300">
          <p>{profileData.department}</p>
          <p>{profileData.institution}</p>
          <p>{profileData.location}</p>
          <p class="mt-3">
            <a href={`mailto:${profileData.email}`} class="text-montana-600 dark:text-montana-400 hover:underline">
              {profileData.email}
            </a>
          </p>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100 mb-4">Quick Links</h3>
        <ul class="space-y-2">
          <li><a href="/" class="text-gray-700 dark:text-gray-300 hover:text-montana-600 dark:hover:text-montana-400">Home</a></li>
          <li><a href="/research" class="text-gray-700 dark:text-gray-300 hover:text-montana-600 dark:hover:text-montana-400">Research</a></li>
          <li><a href="/publications" class="text-gray-700 dark:text-gray-300 hover:text-montana-600 dark:hover:text-montana-400">Publications</a></li>
          <li><a href="/teaching" class="text-gray-700 dark:text-gray-300 hover:text-montana-600 dark:hover:text-montana-400">Teaching</a></li>
        </ul>
      </div>

      <!-- Social Links -->
      <div>
        <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100 mb-4">Connect</h3>
        <div class="flex space-x-4">
          <a href={profileData.links.googleScholar} target="_blank" rel="noopener noreferrer" class="text-gray-700 dark:text-gray-300 hover:text-montana-600 dark:hover:text-montana-400">
            <span class="sr-only">Google Scholar</span>
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 24a7 7 0 110-14 7 7 0 010 14zm0-24L0 9.5l4.838 3.94A8 8 0 0112 9a8 8 0 017.162 4.44L24 9.5z"/>
            </svg>
          </a>
          <a href={profileData.links.github} target="_blank" rel="noopener noreferrer" class="text-gray-700 dark:text-gray-300 hover:text-montana-600 dark:hover:text-montana-400">
            <span class="sr-only">GitHub</span>
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
            </svg>
          </a>
          <a href={profileData.links.linkedin} target="_blank" rel="noopener noreferrer" class="text-gray-700 dark:text-gray-300 hover:text-montana-600 dark:hover:text-montana-400">
            <span class="sr-only">LinkedIn</span>
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <div class="mt-8 pt-8 border-t border-gray-200 dark:border-gray-800 text-center text-gray-600 dark:text-gray-400">
      <p>&copy; {new Date().getFullYear()} Zedong Peng. All rights reserved.</p>
    </div>
  </div>
</footer>
